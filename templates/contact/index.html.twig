{% extends 'base.html.twig' %}

{% block title %}Contact
{% endblock %}

{% block body %}
    <h1>Contact</h1>
    {# {{dump(contacts)}} #}

    <table>
        <tbody></tbody>
    </table>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">FirstName</th>
            <th scope="col">Newsletter</th>
        </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>
                    {{contact.name}}
                </td>
                <td>
                    {{contact.firstname}}
                </td>
                <td>
                    {{contact.newsletter}}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}